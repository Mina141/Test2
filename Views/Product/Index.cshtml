@model List<Product>

@{
    ViewData["Title"] = "Index";
}

 <section class="product_section layout_padding">
            
               <div class="heading_container" style="align-items: center;">
                  <h2>
                     Our <span>products</span>
                  </h2>
               </div>  
               <div class="row">
        @foreach (Product item in @Model)
        {
                  <div class="col-sm-6 col-md-4 col-lg-4">
                     <div class="box">
                        <div class="">
                           
                        </div>
                        <div  class="detail-box">
                            <h5  id="title1" >
                                @item.Name
                            </h5>
                            <h6 id="price1">
                               @item.Price
                            </h6>
                         </div>
                        <div class="img-box">
                           <img  id="img1"src="images/@item.Image" alt="">
                        </div>
                        <div class="option_container">
                            <div class="options">
        
                             <button class="option1" value="1" onclick="addToCart(value)">
                                Add to Cart
                                 </button>
                                 <button class="option2" value="1"  onclick="buyNow(value)">
                                 Buy Now
                                 </button>
                            </div>
                          
                        </div>
        
                        
                     </div>


                  </div>
        }               
                  </div>
                  <div class="btn-box">
                     <a href="#" onclick="Getdata()">
                        More products
                     </a>
                  </div>
         </section>
   
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
